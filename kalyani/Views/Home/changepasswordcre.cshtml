@model AutoSherpa_project.Controllers.changePassword
@{
    /**/

    //ViewBag.Title = "changePassowrd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true, "");
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title" style="text-align:center"><b>Change Password</b></div>
                    <div style="float:right; font-size: 80%; position: relative; top:-10px"></div>
                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon danger"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.curPassword, new { @class = "form-control", @placeholder = "Current Password",@id="cuupass", @autocomplete = "off" })
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon danger"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.newPass, new { @class = "form-control", @placeholder = "New Password",@id="newPass", @autocomplete = "off" })
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon danger"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.confirmPass, new { @class = "form-control", @placeholder = "Confirm Password", @id = "comPass",@autocomplete = "off" })
                    </div>
                    <input type="submit" value="Submit" id="change" class="btn btn-primary pull-right" />
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    @if (ViewBag.error != null)
    {
        <script type="text/javascript">
            Lobibox.notify('warning', {
                continueDelayOnInactiveTab: true,
                msg: 'Incorrect Current Password'
            });
        </script>
    }

    <script type="text/javascript">
        $('#change').click(function (e) {

            if (dealerCode == "POPULAR" || dealerCode == "INDUS") {
                if ($('#cuupass').val() == $('#newPass').val()) {
                    Lobibox.notify('warning', {
                        continueDelayOnInactiveTab: true,
                        msg: 'New Password should not be same as Old Password'
                    });
                    return false;
                }
            }
   
            if ($('#cuupass').val() == "") {
                Lobibox.notify('warning', {
                    continueDelayOnInactiveTab: true,
                    msg: 'Please Enter Current Password.'
                });
                return false;
            }
            if ($('#newPass').val() == "" || $('#comPass').val() == "") {
                Lobibox.notify('warning', {
                    continueDelayOnInactiveTab: true,
                    msg: 'Please Enter New and Confirm Password.'
                });
                return false;
            }
            if ($('#newPass').val() !== $('#comPass').val()) {
                e.preventDefault();
                Lobibox.notify('warning', {
                    continueDelayOnInactiveTab: true,
                    msg: 'Password not matched'
                });
                $('#comPass').focus();
            }
        })
    </script>
}


