        </div>
    </div>      <!-- ./col -->
    <div class="col-sm-2 col-half-offset">
        <!-- small box -->
        <div class="small-box bg-orange">
            <div class="inner">
                <h3><div id="creMIncomingCount">@ViewBag.incoming</div></h3>
                <p> Incoming Calls</p>
            </div>
            <div class="icon"> <i class="ion-android-checkbox-outline"></i> </div>
        </div>
    </div>        <!-- ./col -->
    <div class="col-sm-2 col-half-offset">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <h3><div id="creMOutgoingCount">@ViewBag.outgoing</div></h3>
                <p> Outgoing Calls</p>
            </div>
            <div class="icon"> <i class="ion-person-add"></i> </div>
        </div>
    </div>        <!-- ./col -->
    <div class="col-sm-2 col-half-offset">
        <!-- small box -->
        <div class="small-box bg-blue" style="height:102px;width:186px;">
