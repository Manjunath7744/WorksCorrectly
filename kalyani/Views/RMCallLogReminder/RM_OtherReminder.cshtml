                <h4><b><div id="curDate">..</div></b></h4>
                <p style="padding:10px;"> Date:</p>@DateTime.Now.ToShortDateString()
            </div>
            <div class="icon"> <i class="fa fa-calendar"></i> </div>
        </div>
    </div>



    <!-- ./col -->
</div>

<div>

